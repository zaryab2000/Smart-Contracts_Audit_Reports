    "@types/chai": "^4.2.14",
    "@types/ethereumjs-util": "^6.1.0",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.8",
    "@types/web3": "^1.2.2",
    "@uniswap/sdk": "^3.0.3",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "apollo-server-express": "^2.17.0",
    "bignumber.js": "^9.0.0",
