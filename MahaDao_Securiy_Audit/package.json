{
  "name": "arthcoin-protocol",
  "version": "2.0.0",
  "description": "A lightweight implementation of the Basis Protocol on Ethereum",
  "repository": "https://github.com/MahaDAO/arthcoin-v2",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "test": "truffle test",
    "dev": "hardhat node",
    "coverage": "hardhat coverage",
    "flatten": "truffle-flattener",
    "start": "tsc && nodemon dist/index.js",
    "console:dev": "truffle console --network dev",
    "compile": "rm -rf build/ && hardhat compile",
    "compile:truffle": "rm -rf build/ && truffle compile",
    "server-rest": "tsc && nodemon dist/server/server-rest.js",
    "server-graphql": "tsc && nodemon dist/server/server-graphql.js",
    "deploy-ropsten": "tsc && nodemon src/truffle/deploy/ropsten/deploy-ropsten.js",
    "migrate:dev": "rm -rf build/ && truffle migrate --network development --reset",
    "migrate:ropsten": "rm -rf build/ && truffle migrate --network ropsten --reset",
    "migrate:kovan": "rm -rf build/ && truffle migrate --network kovan --reset"
  },
  "devDependencies": {
    "@chainlink/contracts": "0.0.10",
